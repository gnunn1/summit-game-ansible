{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "annotations": {
            "iconClass": "icon-java",
            "description": "Application template for Summit game bus",
            "tags": "java",
            "version": "1.0.0",
            "openshift.io/display-name": "Summit Game Bus"
        },
        "name": "gamebus"
    },
    "labels": {
        "template": "gamebus"
    },
    "message": "A new Summit game server has been created in your project.",
    "parameters": [
        {
            "description": "The name for the application.",
            "displayName": "Application Name",
            "name": "APPLICATION_NAME",
            "value": "gamebus",
            "required": true
        },
        {
            "description": "Deployment color (i.e. default, blue, green or canary)",
            "displayName": "Color",
            "name": "COLOR",
            "value": "default",
            "required": true
        },
        {
            "description": "Number of replicas to deploy",
            "displayName": "Replica Count",
            "name": "REPLICA_COUNT",
            "value": "1",
            "required": false
        },
        {
            "description": "Maven Mirror URL",
            "displayName": "Maven Mirror URL",
            "name": "MAVEN_MIRROR_URL",
            "required": false
        }    
    ],
    "objects": [
        {
            "kind": "Service",
            "apiVersion": "v1",
            "spec": {
                "ports": [
                    {
                        "port": 9001,
                        "targetPort": 9001
                    }
                ],
                "selector": {
                    "deploymentConfig": "${APPLICATION_NAME}-${COLOR}"
                }
            },
            "metadata": {
                "name": "${APPLICATION_NAME}-${COLOR}",
                "labels": {
                    "app": "${APPLICATION_NAME}",
                    "variant": "${COLOR}"
                },
                "annotations": {
                    "description": "The application's http port."
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "spec": {
                "ports": [
                    {
                        "port": 9002,
                        "targetPort": 9002
                    }
                ],
                "selector": {
                    "deploymentConfig": "${APPLICATION_NAME}-${COLOR}"
                }
            },
            "metadata": {
                "name": "${APPLICATION_NAME}-${COLOR}-internal",
                "labels": {
                    "app": "${APPLICATION_NAME}",
                    "variant": "${COLOR}"
                },
                "annotations": {
                    "description": "The web server's internal http port."
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "spec": {
                "ports": [
                    {
                        "port": 9003,
                        "targetPort": 9003
                    }
                ],
                "selector": {
                    "deploymentConfig": "${APPLICATION_NAME}-${COLOR}"
                }
            },
            "metadata": {
                "name": "${APPLICATION_NAME}-${COLOR}-traffic",
                "labels": {
                    "app": "${APPLICATION_NAME}",
                    "variant": "${COLOR}"
                },
                "annotations": {
                    "description": "The web server's traffic port."
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "spec": {
                "ports": [
                    {
                        "port": 9004,
                        "targetPort": 9004
                    }
                ],
                "selector": {
                    "deploymentConfig": "${APPLICATION_NAME}-${COLOR}"
                }
            },
            "metadata": {
                "name": "${APPLICATION_NAME}-${COLOR}-boards",
                "labels": {
                    "app": "${APPLICATION_NAME}",
                    "variant": "${COLOR}"
                },
                "annotations": {
                    "description": "The web server's leaderboard and scoreboard port."
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-${COLOR}",
                "labels": {
                    "app": "${APPLICATION_NAME}",
                    "variant": "${COLOR}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling",
                    "rollingParams": {
                        "timeoutSeconds": 60
                    }
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APPLICATION_NAME}-${COLOR}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APPLICATION_NAME}:${COLOR}"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": "${REPLICA_COUNT}",
                "selector": {
                    "deploymentConfig": "${APPLICATION_NAME}-${COLOR}"
                },
                "template": {
                    "metadata": {
                        "name": "${APPLICATION_NAME}-${COLOR}",
                        "labels": {
                            "app": "${APPLICATION_NAME}",
                            "variant": "${COLOR}",
                            "deploymentConfig": "${APPLICATION_NAME}-${COLOR}",
                            "vertx-cluster": "${APPLICATION_NAME}"
                        }
                    },
                    "spec": {
                        "terminationGracePeriodSeconds": 75,
                        "containers": [
                            {
                                "name": "${APPLICATION_NAME}-${COLOR}",
                                "image": " ",
                                "imagePullPolicy": "Always",
                                "livenessProbe": {
                                    "tcpSocket": {
                                        "port": 9001
                                    },
                                    "initialDelaySeconds": 15,
                                    "timeoutSeconds": 1
                                },
                                "readinessProbe": {
                                    "tcpSocket": {
                                        "port": 9001
                                     },
                                     "initialDelaySeconds": 15,
                                     "timeoutSeconds": 1
                                },                                
                                "env": [
                                    {
                                        "name": "JAVA_APP_JAR",
                                        "value": "game-service-1.0.0-SNAPSHOT-fat.jar"
                                    },
                                    {
                                        "name": "JAVA_ARGS",
                                        "value": "-cluster"
                                    },
                                    {
                                        "name": "SCORE_SERVER",
                                        "value": "http://score:8080/kie-server/services/rest/server/containers/instances/score"
                                    },
                                    {
                                        "name": "SCORE_SERVER_PORT",
                                        "value": "8080"
                                    },
                                    {
                                        "name": "ACHIEVEMENTS_SERVER",
                                        "value": "http://achievement:9090/api"
                                    },
                                    {
                                        "name": "ACHIEVEMENTS_SERVER_PORT",
                                        "value": "9090"
                                    },
                                    {
                                        "name": "JAVA_ARGS",
                                        "value": "-cluster"
                                    },
                                    {   
                                        "name": "SCORE_USER",
                                        "value": "{{score_user}}"
                                    },
                                    {   
                                        "name": "SCORE_PASSWORD",
                                        "value": "{{score_password}}"
                                    },
                                    {   
                                        "name": "COLOR",
                                        "value": "${COLOR}"
                                    },
                                    {
                                        "name": "POD_LABEL_VALUE",
                                        "value": "${APPLICATION_NAME}"
                                    },
                                    {
                                        "name": "AUTH_TOKEN",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "key": "token",
                                                "name": "game-auth"
                                            }
                                        }
                                    }
                                ],
                                "ports": [
                                    {
                                        "name": "jolokia",
                                        "containerPort": 8778,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "name": "http",
                                        "containerPort": 9001,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "name": "internal",
                                        "containerPort": 9002,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "name": "traffic",
                                        "containerPort": 9003,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "name": "boards",
                                        "containerPort": 9004,
                                        "protocol": "TCP"
                                    }                                    
                                ]
                            }
                        ]
                    }
                }
            }
        }
    ]
}